<!DOCTYPE html>
<html>
<head>
  <title>Ttrackr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='container'>
  <ul class="list-inline">
    <li><%= link_to "All Shirts", shirts_path  %></li>
  </ul>

  <% if logged_in? %>
    Welcome, <%= current_user.username %> | <%= link_to "Sign out", sign_out_path, method: :delete %>
  <% else %>
    <%= link_to "Sign In", sign_in_path %> | <%= link_to "Sign up", sign_up_path %>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
